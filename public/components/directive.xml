<templates>
    <t t-name="Directive">
        <h2>Directivas Qweb en OWL</h2>

        <!-- Uso de t-set -->
        <t t-set="greeting" t-value="'Bienvenidos, ' + state.username"/>
        <h3 t-esc="greeting"/>

        <!-- Uso de t-model -->
        <section>
            <label>Nombre de Usuario: </label>
            <input type="text" t-model="state.username"/>
        </section>

        <section>
            <h3>Lista de Usuarios</h3>
            <p>
                <t t-out="'Usuarios: ' + state.users.length"/>
            </p>
            <p>
                <t t-out="'Activos: ' + activeCount"/>
            </p>
            <div t-if="state.users.length" class="user-list">
                <aside t-foreach="state.users" t-as="user" t-key="user.id" t-att-class="user.active ? 'active' : ''">
                    <User user="user" onToggle.bind="toggleUserStatus" onDelete.bind="deleteUser"/>
                </aside>
            </div>
            <div t-else="">
                <h3>No hay usuarios disponibles</h3>
            </div>
            <div class="btns-container">
                <button t-on-click="addUser">Agregar Usuario</button>
                <button t-on-click="resetUsers">Reset</button>
            </div>
        </section>
    </t>
</templates>
